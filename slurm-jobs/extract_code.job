#!/bin/bash

#SBATCH -N 1
#SBATCH -t 1-00:00:00
#SBATCH -p gpu_titanrtx_shared

RUN_TIMESTAMP="20200621-173647"
N_CKPT= # if not set, takes the last available checkpoint

# Getting dir of this script
if [ ! -z $SLURM_JOB_ID ];  then
    # check the original location through scontrol and $SLURM_JOB_ID
    SCRIPT_DIR=$( dirname $(scontrol show job $SLURM_JOBID | awk -F= '/Command=/{print $2}'))
else
    # otherwise: started with bash. Get the real location.
    SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
fi

ROOT_DIR=$( cd "$SCRIPT_DIR"; pwd )
echo "Found root dir $ROOT_DIR"

CKPT_DIR="$ROOT_DIR"/out/"$RUN_TIMESTAMP"/checkpoint

if [ -z "$N_CKPT" ]; then
    N_CKPT=$(find "$CKPT_DIR/"vqvae_*.pt -printf "%f\n" | tail -1 | cut -d'_' -f 2 | cut -d'.' -f 1)
fi

CKPT_PATH="$CKPT_DIR"/vqvae_"$N_CKPT".pt
echo "Found checkpoint path: '$CKPT_PATH'" 

DATASET_NAME="ffhq-dataset"
DATASET_EXT=".tar"
DATASET_PATH="$ROOT_DIR"/datasets/"$DATASET_NAME""$DATASET_EXT"
DATASET_SUBPATH="images1024x1024/"

INDIR="$TMPDIR"
mkdir -p "$INDIR"

echo "- copying dataset"
cp "$DATASET_PATH" "$INDIR"
echo "- untarring dataset"
tar -xf "$INDIR"/"$DATASET_NAME".tar -C "$INDIR"
DATASET_INDIR="$INDIR"/"$DATASET_SUBPATH"

OUTDIR="$ROOT_DIR"
mkdir -p "$OUTDIR"


echo "- setting up env"
# Conda env
module load 2019
module load Miniconda2

# Cuda/cuDNN
module load cuDNN

source activate pytorch

SCRIPTPATH="$ROOT_DIR/extract_code.py"
OUT_CODE_PATH="$ROOT_DIR"/codes/"$TIMESTAMP"

SIZE="256"
PYTHON_ARGS="\
--size 256 \
--ckpt $CKPT_PATH \
--name $ROOT_DIR/codes/$RUN_TIMESTAMP-$SIZE-$N_CKPT \
$DATASET_INDIR\
"

echo "- starting run"
python "$SCRIPTPATH" $PYTHON_ARGS
